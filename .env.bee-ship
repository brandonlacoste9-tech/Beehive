# .env.bee-ship
# Copy these to Netlify Environment Variables (Site Settings → Build & deploy → Environment)

# Bee Agent API
BEE_API_URL=https://www.adgenxai.pro/api
BEE_API_KEY=your-bee-api-key-here

# Supabase (for asset storage)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Optional: External renderer microservice
RENDER_SERVICE_URL=https://your-renderer.fly.dev

# Instagram / Facebook
INSTAGRAM_ACCOUNT_ID=your-instagram-business-account-id
FB_ACCESS_TOKEN=your-long-lived-page-access-token

# TikTok (optional)
TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret
TIKTOK_ACCESS_TOKEN=your-tiktok-access-token

# YouTube (optional)
YOUTUBE_CLIENT_ID=your-google-oauth-client-id
YOUTUBE_CLIENT_SECRET=your-google-oauth-client-secret
YOUTUBE_REFRESH_TOKEN=your-youtube-refresh-token
