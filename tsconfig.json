{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["vitest/node"],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "scripts", "tests"],
  "exclude": ["node_modules"]
}
